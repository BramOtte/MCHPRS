{
  "name": "2t repeater",
  "description": "test the individual component behavior and the timing of a 2t repeater",
  "inputs": [
    "1,2,1"
  ],
  "outputs": [
    "3,2,1"
  ],
  "tests": [
    {
      "description": "test that the delay from input to output is 2t",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 1 0",
        "3: 1 1",
        "4: 1 1"
      ]
    },
    {
      "description": "test that a pulse less then than 2t is extended to 2t",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 0 0",
        "3: 0 1",
        "4: 0 1",
        "5: 0 0"
      ]
    },
    {
      "description": "test that the repeater turns off after 2t",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 1 0",
        "3: 1 1",
        "4: 0 1",
        "5: 0 1",
        "6: 0 0"
      ]
    },
    {
      "description": "test that a 1t off pulse does not casue the ouput to turn off",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 1 0",
        "3: 0 1",
        "4: 1 1",
        "5: 1 1",
        "6: 1 1"
      ]
    }
  ]
}