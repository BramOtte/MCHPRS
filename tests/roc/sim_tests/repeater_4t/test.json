{
  "name": "4t repeater",
  "description": "test the individual component behavior and the timing of a 4t repeater",
  "inputs": [
    "1,2,1"
  ],
  "outputs": [
    "3,2,1"
  ],
  "tests": [
    {
      "description": "test that the delay from input to output is 4t",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 1 0",
        "3: 1 0",
        "4: 1 0",
        "5: 1 1",
        "6: 1 1"
      ]
    },
    {
      "description": "test that a pulse less then than 4t is extended to 4t",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 0 0",
        "3: 0 0",
        "4: 0 0",
        "5: 0 1",
        "6: 0 1",
        "7: 0 1",
        "8: 0 1",
        "9: 0 0"
      ]
    },
    {
      "description": "test that the repeater turns off after 4t",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 1 0",
        "3: 1 0",
        "4: 1 0",
        "5: 0 1",
        "6: 0 1",
        "7: 0 1",
        "8: 0 1",
        "9: 0 0"
      ]
    },
    {
      "description": "test that a 3t off pulse does not casue the ouput to turn off",
      "procedure": [
        "0: 0 0",
        "1: 1 0",
        "2: 1 0",
        "3: 1 0",
        "4: 1 0",
        "5: 0 1",
        "6: 0 1",
        "7: 0 1",
        "8: 1 1",
        "9: 1 1",
        "10: 1 1",
        "11: 1 1",
        "12: 1 1"
      ]
    }
  ]
}